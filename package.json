{
  "name": "gadgets360",
  "version": "1.0.0",
  "description": "online shop for gadgets",
  "type": "module",
  "local":"set NODE_OPTIONS=--openssl-legacy-provider",
  "remote":"export NODE_OPTIONS=--openssl-legacy-provider",
  "main": "server.js",
  "scripts": {
    "start": "node server/server",
    "build-local": "set NODE_OPTIONS=--openssl-legacy-provider && npm install --prefix client && npm run build --prefix client",
    "server": "set NODE_OPTIONS=--openssl-legacy-provider && nodemon server/server",
    "client": "set NODE_OPTIONS=--openssl-legacy-provider && npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false && set NODE_OPTIONS=--openssl-legacy-provider && npm install --prefix client && npm run build --prefix client"
  },
  "author": "Mohammad Abbas",
  "license": "ISC",
  "dependencies": {
    "@sendgrid/mail": "^7.7.0",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "concurrently": "^6.2.0",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.21.2",
    "googleapis": "^81.0.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.14",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "nodemailer": "^6.6.3",
    "nodemon": "^3.1.10",
    "razorpay": "^2.0.6"
  }
}
